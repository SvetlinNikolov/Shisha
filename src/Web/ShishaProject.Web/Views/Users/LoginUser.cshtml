@using ShishaProject.Web.ViewModels.Users;
@model LoginInputModel

@{ 
    var returnUrl = string.IsNullOrWhiteSpace(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
}
<partial name="_Hero" />
<partial name="_SearchBar" />

<!-- Product details page -->
<div class="auth-form-container">
    <form method="POST">
        <h2>LOGIN</h2>

        <label for="username">
            Username
            <input type="text" asp-for="@Model.Username">
        </label>

        <label for="password">
            Password
            <input type="password" asp-for="@Model.Password">
        </label>

        <div class="login-helpful-links-container">
            <p>Forgotten password? <a asp-controller="Users" asp-action="ResetPassword">Reset!</a></p>
            <p>Don't have an account? <a asp-controller="Users" asp-action="RegisterUser">Register!</a></p>
        </div>

        <button type="submit" asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">LOGIN</button>
    </form>
</div>
